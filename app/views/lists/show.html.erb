<h2><%= @list.name %></h2>

<div class="container">
  <% @bookmarks.each do |bookmark| %>
  <div class="card">
    <%= image_tag bookmark.movie.poster_url, width: 200  %>
    <h2><%= bookmark.movie.title %></h2>
    <p><%= bookmark.movie.overview %></p>
    <h4><%= bookmark.movie.rating %></h4>
    <p><%= bookmark.comment %></p>
    <%= link_to "Delete", bookmark_path(bookmark), method: :delete%></p>
  </div>
  <% end  %>
</div>

<%= link_to "Add Movie", new_list_bookmark_path(@list) %>
<%= link_to "Back to Lists", lists_path %>
