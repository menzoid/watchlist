<div class="banner mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>');">
  <div class="container">
    <h1><%= @list.name %></h1>
    <p><%= @list.description %></p>
    <%= link_to "Add Movie", new_list_bookmark_path(@list), class: "btn btn-flat mt-4" %>
  </div>
</div>

<div class="container mt-4">
  <div class="cards-movies">
    <% @bookmarks.each do |bookmark| %>
    <div class="card-movie">
      <%= image_tag bookmark.movie.poster_url, width: 200  %>
      <div class="card-movie-infos">
        <div class="card-movie-content">
          <div class="movie-title-rating d-flex justify-content-between mb-3 mt-1">
            <h2><%= bookmark.movie.title %></h2>
            <h2><%= bookmark.movie.rating %>    ⭐️</h2>
          </div>
          <p><%= bookmark.movie.overview %></p>
        </div>
        <div class="movie-footer d-flex justify-content-between align-items-end mt-4">
          <em>"<%= bookmark.comment %>"</em>
          <p><%= link_to 'remove', bookmark_path(bookmark), method: :delete, class: "btn btn-delete mr-2"%></p>
        </div>
      </div>  
    </div>
    <% end  %>
  </div>
</div>

<br>

<div class="container">
  <div class="reviews-header d-flex justify-content-between align-items-end mb-3">
    <h3>List reviews</h3>
    <%= link_to "Add Review", new_list_review_path(@list), class: "btn btn-create mt-4" %>
  </div>
  <% @reviews.each do |review|  %>
    <div class="notification">
      <img src='https://thumbs.dreamstime.com/b/popcorn-striped-basket-eps-vector-illustration-white-background-64124737.jpg' class="avatar-large"/>
      <div class="notification-content">
        <p><small><%= review.rating %> stars</small> reviewed on <%= review.created_at.strftime("%eth %b")   %></p>
        <p><%= review.comment %></p>
      </div>

      <div class="notification-actions">
        <%= link_to 'Delete', review_path(review), method: :delete, class: "far fa-trash-alt" %>
      </div>
    </div>
  <% end %>
</div>

<div class="container mt-4 mb-4">
  <div class="d-flex flex-row-reverse">
    <%= link_to 'delete list', list_path(@list), method: :delete, class: "btn btn-flat mr-2", id: "sweet-alert-demo"%>
  </div>
</div>
