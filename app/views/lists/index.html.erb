<div class="banner mb-4" style="background-image: linear-gradient(rgba(100,100,100,0.2),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8Y2luZW1hfGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60);">
  <div class="container">
    <h2 class="mb-2">Save all your favourite movies into one place.</h2>
    <p class="mb-4"><span id="banner-typed-text"></span></p>
    <button type="button" class="btn btn-flat" data-toggle="modal" data-target="#form">
      Add list
    </button>
  </div>
</div>

<div class="modal fade" id="form" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New List</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <%= simple_form_for(@list) do |t| %>
            <div class="form-inputs">
              <%= t.input :name, label: "Watcha gonna call this one?" %>
            </div>
              <div class="form-inputs">
              <%= t.input :description, label: "And what's it's vibe?" %>
            </div>
            <div class="form-inputs">
              <%= t.input :photo, as: :file, label: "Give that vibe a look.." %>
            </div>
            <div class="form-action mt-4">
              <%= t.button :submit, class: "btn btn-create" %>
              <%= link_to "Back", root_path, class: "btn btn-flat" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container mb-4">
  <div class="cards">
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do %>
      <div class="card-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
          <h5><%= list.name %></h5>
          <p><%= list.description %></p>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
